{
  "name": "rooms-quickly",
  "version": "1.0.0",
  "description": "Rooms bidding system on hotel auction.",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test pm2 kill && NODE_ENV=test pm2 start rooms-quickly.json && NODE_ENV=test mocha --timeout 5000 --reporter spec --compilers ts:ts-node/register 'spec/**/*.spec.ts'",
    "apidoc": "apidoc -o apidoc/ -i src/",
    "sourcedoc": "rm -rf docs && typedoc --target \"ES6\" --out docs",
    "tsc": "tsc",
    "seed": "node dist/database/seed.js",
    "activate": "node dist/database/activateRoom.js",
    "start": "pm2 start rooms-quickly.json",
    "stop": "pm2 kill"
  },
